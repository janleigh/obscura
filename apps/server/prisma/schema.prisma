datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_POSTGRES_URL_NON_POOLING")
}

model User {
  id              Int      @id @default(autoincrement())
  username        String   @unique
  password        String   // bcrypt hashed password
  realName        String?  @map("real_name")
  currentLevel    Int      @default(0) @map("current_level")
  joinedAt        DateTime @default(now()) @map("joined_at")
  lastActive      DateTime @default(now()) @map("last_active")
  completedLevels String   @default("[]") @map("completed_levels") // JSON array of completed level IDs

  logs            Log[]
  phaseKeys       PlayerPhaseKey[]

  @@index([username])
  @@map("users")
}

model PhaseKey {
  id              Int      @id @default(autoincrement())
  keyName         String   @unique @map("key_name")
  keyHash         String   @map("key_hash")
  phaseUnlocked   Int      @map("phase_unlocked")
  description     String?
  hintText        String?  @map("hint_text")
  createdAt       DateTime @default(now()) @map("created_at")

  players         PlayerPhaseKey[]

  @@map("phase_keys")
}

model PlayerPhaseKey {
  id              Int      @id @default(autoincrement())
  userId          Int      @map("user_id")
  phaseKeyId      Int      @map("phase_key_id")
  discoveredAt    DateTime @default(now()) @map("discovered_at")

  user            User     @relation(fields: [userId], references: [id])
  phaseKey        PhaseKey @relation(fields: [phaseKeyId], references: [id])

  @@unique([userId, phaseKeyId])
  @@map("player_phase_keys")
}

model Log {
  id          Int       @id @default(autoincrement())
  userId      Int?      @map("user_id")
  levelId     Int?      @map("level_id")
  eventType   String    @map("event_type")
  details     String?
  ipAddress   String?   @map("ip_address")
  userAgent   String?   @map("user_agent")
  createdAt   DateTime  @default(now()) @map("created_at")

  user        User?     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
  @@map("logs")
}
