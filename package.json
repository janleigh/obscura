{
	"name": "obscura",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"turbo": "^2.6.3"
	},
	"packageManager": "bun@1.3.0",
	"private": true,
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"start": "turbo start",
		"postinstall": "cd apps/server && bun prisma:generate",
		"lint": "bunx biome lint --css-parse-tailwind-directives=true --write .",
		"format": "bunx biome format --css-parse-tailwind-directives=true --write .",
		"lf": "bunx biome check --css-parse-tailwind-directives=true ."
	},
	"type": "module",
	"workspaces": ["apps/*", "packages/*"]
}
