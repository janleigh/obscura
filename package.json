{
	"name": "obscura",
	"devDependencies": {
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"turbo": "^2.6.3"
	},
	"packageManager": "bun@1.3.0",
	"private": true,
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"start": "turbo start",
		"postinstall": "cd apps/server && bun prisma:generate",
		"lint": "bunx eslint . --ext .ts,.tsx,.js,.jsx",
		"lint:fix": "bunx eslint . --ext .ts,.tsx,.js,.jsx --fix",
		"format": "bunx prettier --write ."
	},
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"sqlite3": "^5.1.7"
	}
}
